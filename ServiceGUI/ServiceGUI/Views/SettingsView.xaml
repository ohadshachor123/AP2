<UserControl x:Class="ServiceGUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceGUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="topTitleStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="TextBlock.Foreground" Value="BlueViolet"></Setter>
            <Setter Property="TextBlock.FontSize" Value="30"></Setter>
            <Setter Property="TextBlock.FontWeight" Value="Bold"></Setter>
            <Setter Property="TextBlock.FontFamily" Value="Century Gothic"></Setter>
        </Style>
        <Style x:Key="fieldStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="TextBlock.FontSize" Value="15"></Setter>
            <Setter Property="TextBlock.FontWeight" Value="DemiBold"></Setter>
            <Setter Property="TextBlock.Margin" Value="2"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource topTitleStyle}" Margin="20" HorizontalAlignment="Center">Settings</TextBlock>        <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource fieldStyle}">Output Directory:</TextBlock>        <TextBlock Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding VM_OutputDirectory}"></TextBlock>        <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource fieldStyle}">Source Name:</TextBlock>        <TextBlock Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding VM_SourceName}"></TextBlock>        <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource fieldStyle}">Log Name:</TextBlock>        <TextBlock Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding VM_LogName}"></TextBlock>        <TextBlock Grid.Row="5" Grid.Column="1" Style="{StaticResource fieldStyle}">Thumbnail Size:</TextBlock>        <TextBlock Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding VM_ThumbnailSize}"></TextBlock>        <Button Grid.Row="6" Grid.ColumnSpan="3" Content="Remove" FontSize="20" Margin="10"></Button>            <ListBox Grid.Row="7" Grid.ColumnSpan="3" Margin="5" ItemsSource="{Binding VM_HandlersList}" SelectedItem="{Binding CurrentlySelected}">            </ListBox>    </Grid>
</UserControl>
